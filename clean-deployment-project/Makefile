.PHONY: devnet start stop clean logs status

devnet:
@echo "ğŸš€ Starting Midnight DevNet..."
docker-compose up -d
@echo "â³ Waiting for services to start..."
sleep 10
@echo "âœ… DevNet should be running!"
@echo "   Check status: make status"
@echo "   View logs: make logs"

start:
docker-compose start

stop:
docker-compose stop

clean:
docker-compose down -v
@echo "ğŸ§¹ Cleaned up DevNet containers and volumes"

logs:
docker-compose logs -f

status:
docker-compose ps

restart: stop start
@echo "ğŸ”„ DevNet restarted"

health:
@echo "ğŸ” Checking DevNet health..."
@curl -s http://localhost:8042/health || echo "âŒ Service not responding"
